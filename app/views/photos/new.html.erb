<p id="notice"><%= notice %></p>

<h1>Upload a Flickr Photo </h1>

<%= form_for @photo do |f| %>
  <div>
    Title: <%=f.text_field :title %>
  </div>
  <div>
    Description: <%= f.text_area :description %>
  </div>
  <div>
    File: <%= f.file_field :upload %>
  </div>
  <div>
    Price for prints in dollars and cents (i.e. 10.00): <%= f.text_field :price %>
  </div>
  <div><%=f.submit "Upload Photo" %></div>
<% end %>